<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.checkmate.checkmatehackupc.Tutorial">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CheckMate is an app that gives you peace of mind. If you&apos;re a Check, then you will receive timed notifications prompting you to indicate whether or not you are OK. If you do not press the OK button, then we will notify a list of your friends that you are NOT OK. If you are a Mate and a Check is NOT OK, you will receive a notification. From the app settings, you can set the frequency of your notifications, update your friend list, and disable your account if you know that you will be away from your phone.  "
        android:id="@+id/textView"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/nextButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onNextPressed" />
</RelativeLayout>
